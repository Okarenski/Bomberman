                cout << " MOVIMENTOS: " << movimentos << "                                 " << endl;
                cout << "                                                                  " << endl;
                cout << " BOMBAS USADAS: " << contagem << "       ITENS PEGOS:             " << endl;
                cout << "__________________________________________________________________" << endl;

                if(InimigosVivos==0)
                {
                    cout<<"voce venceu!"<<endl;
                }
                if(JogadoresVivos==0)
                {
                    cout<<"voce perdeu!"<<endl;
                }

            } //fim do laco do jogo

